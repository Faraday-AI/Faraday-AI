# Microsoft Graph API Settings
# These values should be set in Render's environment variables
MSCLIENTID=
MSCLIENTSECRET=
MSTENANTID=
REDIRECT_URI=https://faraday-ai.com/auth/callback
SCOPE=User.Read Mail.Read Files.ReadWrite.All

# OpenAI Settings
# This value should be set in Render's environment variables
OPENAI_API_KEY=

# Optional Integrations
ENABLE_TWILIO=true
ENABLE_GOOGLE_CLOUD=true

# Twilio Settings
# These values should be set in Render's environment variables
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_VOICE_URL=https://faraday-ai.com/voice
TWILIO_WEBHOOK_URL=https://faraday-ai.com/api/v1/twilio/webhook
TWILIO_STATUS_CALLBACK=https://faraday-ai.com/api/v1/twilio/status

# Google Cloud Settings
GOOGLE_PROJECT_ID=your_google_project_id
GOOGLE_CREDENTIALS_FILE=google-credentials.json
DEFAULT_TARGET_LANGUAGE=es  # Default language for translations (es = Spanish)
SUPPORTED_LANGUAGES=["es", "en", "fr", "pt", "zh"]  # Spanish, English, French, Portuguese, Chinese

# Translation Service Settings
AUTO_DETECT_LANGUAGE=true
PRESERVE_FORMATTING=true
ENABLE_LANGUAGE_DETECTION=true


